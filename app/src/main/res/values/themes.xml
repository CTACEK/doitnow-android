<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DoItNow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_while</item>
        <item name="colorPrimaryVariant">@color/dark_while</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/color_dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DoItNow.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DoItNow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="page_title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_light_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">?attr/colorPrimaryVariant</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/color_light_gray_light</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/back_light_primary</item>
        <item name="colorPrimary">@color/back_dark_primary</item>
    </style>


</resources>