<resources>
    <!-- Base application theme. -->
    <style name="Theme.DoItNow" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_while</item>
        <item name="colorPrimaryVariant">@color/dark_while</item>
        <item name="colorOnPrimary">@color/color_light_gray</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/color_dark_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DoItNow.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar" />

    <style name="Theme.DoItNow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="page_title">
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Switch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/color_light_blue</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">?attr/colorPrimaryVariant</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/color_light_gray_light</item>
    </style>

    <style name="MaterialCalendarTheme" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <!-- just override the colors used in the default style -->
        <item name="colorOnPrimary">@color/back_light_primary</item>
        <item name="colorPrimary">@color/color_dark_blue</item>
    </style>

    <style name="Widget.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">
            @style/TextAppearance.TextInputLayout.HintText
        </item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">?attr/colorPrimaryDark</item>
    </style>

    <style name="TextAppearance.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.CollapsingToolBar" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="TextAppearance.ExpandedToolBar" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">@font/roboto_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="AlertDialogCustom" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <!-- Used for the buttons -->
        <item name="colorPrimary">@color/color_light_red</item>
        <!-- Used for the title and text -->
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.Body</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.Body</item>
        <!-- Used for the background -->=
        <item name="shapeAppearanceOverlay">@style/MaterialAlertDialogCorners</item>
    </style>

    <style name="MaterialAlertDialog.Body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="MaterialAlertDialogCorners">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialogText" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">5dp</item>
        <item name="cornerSizeTopRight">8dp</item>
    </style>

</resources>